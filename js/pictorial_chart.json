        "title": null
      }
    },
    "y": {
      "field": "percentage",
      "type": "quantitative",
      "axis": {
        "title": "Percentage (%)",
        "grid": true
      },
      "scale": {
        "domain": [0, 100]
      }
    },
    "color": {
      "field": "gender",
      "type": "nominal",
      "scale": {
        "domain": ["Male", "Female"],
        "range": ["#0072B2", "#D55E00"]
      },
      "legend": null
