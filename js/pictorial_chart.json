{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Gender distribution in Paris 2024 Summer Olympics",
  "width": 500,
  "height": 300,
  "data": {
    "values": [
      { "gender": "Male", "percentage": 50.91, "symbol": "♂" },
      { "gender": "Female", "percentage": 49.09, "symbol": "♀" }
    ]
  },
  "mark": {
    "type": "bar",
    "cornerRadius": 5
  },
  "encoding": {
    "x": {
      "field": "gender",
      "type": "nominal",
      "axis": {
        "labelAngle": 0,
