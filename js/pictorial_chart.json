    "tooltip": [
      { "field": "gender", "type": "nominal", "title": "Gender" },
      {
        "field": "percentage",
        "type": "quantitative",
        "title": "Percentage",
        "format": ".2f"
      }
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "cornerRadius": 5
      }
    },
    {
      "mark": {
        "type": "text",
        "dy": -10,
        "fontSize": 40
