{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Pie chart showing country participation percentage (top 8 + Other).",
  "title": {
    "text": "Country Participation Distribution",
    "anchor": "middle"
  },
  "width": 480,
  "height": 360,
  "data": { "url": "../data/country_participation_percent.csv" },
  "mark": { "type": "arc", "tooltip": true },
  "encoding": {
    "theta": {
      "field": "Participation_Percentage",
      "type": "quantitative",
      "stack": "normalize"
    },
    "color": { "field": "Country", "type": "nominal" },
    "tooltip": [
      { "field": "Country", "type": "nominal", "title": "Country" },
      {
        "field": "Participation_Percentage",
        "type": "quantitative",
        "title": "Participation (%)",
        "format": ".2f"
      }
    ]
  },
  "view": { "stroke": "transparent" }
}
